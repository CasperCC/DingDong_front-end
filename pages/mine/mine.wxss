/* pages/mine/mine.wxss */
@import "/pages/common/index.wxss";

page{/*页面背景—————统一浅灰*/
  background-color: #ededed;
}
.userInformation {/*头像&微信名称*/
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
}
.userInfomation-avatar {/*头像*/ 
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  margin-top: 90rpx;
  margin-left: 50rpx;
  border-color: #ffffff;
  border-radius: 10%;
}
.msgLine {
  display: flex;
  flex-direction: column;
}
.userInformation-nickname {/*昵称*/
  color: #000000;
  font-size: 22px;
  font-weight: bold;
  width: 320rpx;
  height: 120px;
  line-height: 120px;
  margin-left: 40rpx;
}

.blackList {
  text-align: center;
  background-color: #ededed;
  color: #6d6d6d;
  font-size: 28rpx;
}

.blackList:active {
  color: black;
}

.section {
  background-color: #ededed;
  border-radius: 20rpx;
  border: 1rpx solid #adadad;
  width: 90%;
}

.verification {
  display: flex;
  justify-content: center;
  background-color: #ffffff;
  width: 100%;
}

.verifiText {
  font-size: 35rpx;
  color: #6d6d6d;
  margin-left: 20rpx;
  margin-top: 30rpx;
}

.verifiButton {
  width: 80rpx;
  font-size: 37rpx;
  color: #424fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}

.verifiButton:active {
  color: #000ba7
}

.whitedivide {/*白色分割线*/
  height: 1px;
  background-color: #ffffff;
  width: 1rpx;
  position:relative;
  top: 0px;
}

.graydivide {/*灰色分割条*/
  height: 9px;
  background-color: #ededed;
  position:relative;
  top: 0px;
}

.function {
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  margin-top: 0rpx;
  overflow: hidden;
  display: flex;/**/
}

.function:active {
  background-color: #d8d8d8;
}

.function1 {
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  margin-top: 0rpx;
  overflow: hidden;
  display: flex;/**/
}

.functioninformation {/*左边动作图标&文字说明*/
  display: flex;
  width: 100%;
}

.left-icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 14px;
}

.right-icon {/*右边图片*/
  display: flex;
  margin-right: 13rpx;
  margin-top: 35rpx;
  position: absolute;
  right: 14px;
}

.icon-picture {/*图标*/
  display: flex;
  width: 24px;
  height: 24px;
}

.text {/*文字*/
  font-size: 17px;
  font-style: normal;
  font-weight: normal;
  width: 150rpx;
  position: relative;
  left: 0px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #000000;
}

.description {
  font-size: 17px;
  font-style: normal;
  font-weight: normal;
  width: 200rpx;
  position: relative;
  left: 0px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #5a5a5a;
}

.usermotto {
  margin-top: 200px;
}

.index-bd {
  padding: 0 0 0 !important;
}

.swiper_com {
  height: 100rpx;
  width: 100vw;
}

.swiper_item {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}